[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=yifan
WorkingDirectory=/home/yifan/sites/SITENAME/source
ExecStart=/home/yifan/sites/SITENAME/virtualenv/bin/gunicorn \
    --bind unix:/tmp/SITENAME.socket \
    superlists.wsgi:application

[Install]
WantedBy=multi-user.target

